using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Xml.Linq;

namespace dzkurs
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string[] names = new string[1];
            string[] positions = new string[1];
            string command;
            string addDossierCommand = "1";
            string showAllDossiersCommand = "2";
            string deleteDossierCommand = "3";
            string searchByLastnameCommand = "4";
            string exitCommand = "5";
            bool isWorking = true;

            while (isWorking)
            {
                Console.WriteLine("Введите команду");
                command = Console.ReadLine();

                if (command == addDossierCommand)
                {
                    CompleteDossier(ref names, ref positions);
                }
                else if (command == showAllDossiersCommand)
                {
                    ShowDossier(names, positions);
                }
                else if (command == deleteDossierCommand)
                {
                    DeleteDossier(ref names, ref positions);
                }
                else if (command == searchByLastnameCommand)
                {
                    SearchByLastname(names, positions);
                }
                else if (command == exitCommand)
                {
                    Console.WriteLine("До свидания!");
                    isWorking = false;
                }
            }
        }

        static void CompleteDossier(ref string[] name, ref string[] post)
        {
            string userInput;
            Console.WriteLine("Введите ФИО");
            userInput = Console.ReadLine();

            string[] tempName = new string[name.Length + 1];

            AddValue(tempName, ref name, userInput);

            Console.WriteLine("Введите должность");
            userInput = Console.ReadLine();

            string[] tempPost = new string[post.Length + 1];

            AddValue(tempPost, ref post, userInput);

            Console.WriteLine("Должность " + post[post.Length - 2] + " Установлена на сотрудника " + name[name.Length - 2]);
        }

        static void AddValue(string[] tempValue, ref string[] value, string userInput)
        {

            for (int i = 0; i < value.Length; i++)
            {

                tempValue[i] = value[i];
                tempValue[value.Length - 1] = userInput;
            }

            value = tempValue;
        }

        static void ShowDossier(string[] name, string[] post)
        {
            int count = 0;

            for (int i = 0; i < name.Length - 1; i++)
            {
                count++;
                Console.WriteLine(count + ". " + name[i] + " - " + post[i]);
            }
        }

        static void DeleteDossier(ref string[] name, ref string[] post)
        {
            Console.WriteLine("Должность " + name[name.Length - 2] + " " + post[post.Length - 2] + " удалена");

            string[] tempName = new string[post.Length - 1];

            for (int i = 0; i < tempName.Length; i++)
            {
                tempName[i] = name[i];
            }

            name = tempName;

            string[] tempPost = new string[post.Length - 1];

            for (int i = 0; i < tempPost.Length; i++)
            {
                tempPost[i] = post[i];
            }

            post = tempPost;
        }

        static void SearchByLastname(string[] name, string[] post)
        {
            string userInput;
            int count = 0;
            string tempLastName;
            string[] tempLastNameSplited;
            Console.WriteLine("Введите фамилию");
            userInput = Console.ReadLine();

            for (int i = 0; i < name.Length - 1; i++)
            {
                tempLastName = name[i];
                tempLastNameSplited = tempLastName.Split(' ');

                if (tempLastNameSplited[0].ToLower() == userInput.ToLower())
                {
                    count++;
                    Console.WriteLine(count + ". " + name[i] + " - " + post[i]);
                }
            }
        }
    }
}
